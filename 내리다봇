                     */
                    if (user && user.voyage && user.voyage.active === true) {
                        if (Date.now() >= (user.voyage.arrival || 0)) {
                            // ì„¹í„° 51ì˜ ë¬´ì—­ ì •ì‚° ì—”ì§„ í˜¸ì¶œ
                            if (typeof _processTradeArrival === 'function') {
                                user.skipHealing = true; // ìì‚° ê¸‰ì¦ ë³´í˜¸ (ë”¥í—¬ëŸ¬ ì˜ˆì™¸)
