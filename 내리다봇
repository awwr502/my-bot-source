    if (msg === "/ìœ ë¬¼ë„ê°") {
        var pieces = Number(user.artifactPieces || 0);
        
        // 1. í˜„ì¬ ì¡°ê° ìˆ˜ì— ë”°ë¥¸ ë‹¤ìŒ ëª©í‘œì¹˜ì™€ ëª©í‘œ ì¹­í˜¸ ì„¤ì •
        var targetGoal = 10;
        var nextTitle = "ë„êµ´ê¾¼";

