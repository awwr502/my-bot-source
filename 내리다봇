/* ì „ì—­ ìƒíƒœ ë³€ìˆ˜ë“¤ (ì„¹í„°1ê³¼ ì¤‘ë³µ ë°©ì§€ ì²˜ë¦¬) */ 
var sprayData = { 
    totalPoint: 0, 
    remainingPoint: 0, 
    maxWinners: 0, 
    currentWinners: 0, 
    winnersList: [], 
    isActive: false, 
    timer: null 
