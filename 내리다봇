    5: { up: 20, stay: 60, down: 20 },
    6: { up: 12, stay: 68, down: 20 },
    7: { up: 8, stay: 67, down: 25 },  
    8: { up: 5, stay: 70, down: 25 }  
};

/* 상점 카테고리 정의 */
var SHOP_CATEGORIES = {
    1: "🎨 장착/꾸미기 (아이콘)",
    2: "🔂 성장/게임 (승급, 방어)",
    3: "💳 경제/지원 (신용, 인증, 기타)",
    4: "🎁 랜덤 뽑기 (아이콘 박스)",
