            }
        }
        safeSaveData(data);
        replier.reply(formatAdmin("ì „ì²´ ì§€ê¸‰ ì™„ë£Œ", "ì´ " + count + "ëª…ì—ê²Œ " + fp(amt) + "P ì§€ê¸‰ ì™„ë£Œ"));
