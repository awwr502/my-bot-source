        if (resSummary.duplicates > 0) {
            body += "\nâ™»ï¸ [ì¤‘ë³µ ë‹¹ì²¨]: " + resSummary.duplicates + "íšŒ\n" + "ğŸ§© ì¡°ê° íšë“: +" + resSummary.earnedFrags + "ê°œ\n";
