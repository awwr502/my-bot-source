            var shareMult = owner.qty > 5 ? 1.0 + (owner.qty - 5) * 0.2 : 1.0;
            finalDividend = Math.floor(totalDividend * shareMult);
            if (owner.data.title === "ê°“ë¬¼ì£¼") finalDividend = Math.floor(finalDividend * 1.1);
        }

