/**
 * @name 외부 소스 코드 (source.js)
 * 이 파일은 메인 로더에 의해 호출됩니다.
 */

// 메인 로더에서 호출하는 핵심 함수명입니다.
function response_sub(room, msg, sender, replier) {
    
    // 1. 테스트 명령어
    if (msg == "/테스트") {
        replier.reply("✅ 깃허브 소스가 정상적으로 실행되고 있습니다!");
    }

    // 2. 주식 점검 명령어 (예시)
    if (msg == "/주식점검") {
        replier.reply(sender + "님, 주식 점검 기능을 준비 중입니다.");
    }
    
    // 추가하고 싶은 명령어들을 여기에 계속 작성하면 됩니다.
}
