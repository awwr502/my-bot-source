            RANDOM_BOX_CONFIG.PROBS.forEach(function(grade) {
                if (grade.items) boxIcons = boxIcons.concat(grade.items);
            });
        }
        
        // 3. ì¤‘ë³µ ì œê±°ëœ ì „ì²´ ê³ ìœ  ì•„ì´ì½˜ ëª©ë¡ ìƒì„±
