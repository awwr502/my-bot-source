        delete roomData.users[oldId];
        safeSaveData(data);
        replier.reply(formatAdmin("ë°ì´í„° ì´ì „ ì„±ê³µ", oldName + " â” " + newName + "\nëª¨ë“  ìì‚° ë° ë“±ê¸‰ì´ ì´ì „ë˜ì—ˆìŠµë‹ˆë‹¤."));
