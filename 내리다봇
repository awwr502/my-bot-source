            targetGoal = 50; 
            nextTitle = "ë„êµ´ì™• âšœï¸"; 
        } else if (pieces >= 40) { 
            targetGoal = 50; 
            nextTitle = "ë„êµ´ì™• âšœï¸"; 
        } else if (pieces >= 30) { 
            targetGoal = 40; 
            nextTitle = "íŠ¸ë ˆì €í—Œí„°"; 
        } else if (pieces >= 20) { 
            targetGoal = 30; 
            nextTitle = "ë°œêµ´ê°€"; 
        } else if (pieces >= 10) { 
            targetGoal = 20; 
            nextTitle = "íƒì‚¬ì›"; 
        } else { 
            targetGoal = 10; 
            nextTitle = "ë„êµ´ê¾¼"; 
