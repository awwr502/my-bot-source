        { name: "ê´‘ì‚°", key: "mine", icon: "â›ï¸" },
        { name: "ë‚šì‹œí„°", key: "fish", icon: "ğŸ£" },
        { name: "ì¹´ì§€ë…¸", key: "casino", icon: "ğŸ°" },
        { name: "ì¤‘ì•™ì€í–‰", key: "bank", icon: "ğŸ¦" },
