        var targetId = found[0].id;
        var targetData = found[0].data;
        var refundLog = "";
        var refundCount = 0;
        var totalRefunded = 0;

        // [ìˆ˜ì •] ì¶œì„ì¼ìˆ˜ ê´€ê³„ì—†ì´ ëª¨ë“  ì‚¬ì±„ ê³„ì•½ ê°•ì œ ì •ì‚° ë° ì‚­ì œ
        if (roomData.loanContracts) {
