        if (earnedLetters > 0) {
            body += "\n\n" + letterMsg;
        }
        
        replier.reply(formatCommand("ğŸ° ìŠ¤í”¼ë˜ ê²°ê³¼", user, body + (res.repayMsg || ""), "ë‚´ ì”ì•¡: " + fp(user.point) + "P"));
    }

    // 1. ëœë¤ ì•„ì´ì½˜ ë°•ìŠ¤ ì²˜ë¦¬ (ë©”ì‹œì§€ í…Œì´ë¸” ë° ì¤‘ë³µ ì¡°ê° ì§€ê¸‰ í¬í•¨)
    if (item.effect === "randomBox") {
        var resSummary = {
            newIcons: [],
            duplicates: 0,
            earnedFrags: 0,
            earnedTickets: 0,
            highestIdx: -1,
            counts: {}
        };

        var msgTable = {
            0: { title: "ğŸ ëœë¤ ì•„ì´ì½˜ ë°•ìŠ¤ ê°œë´‰", desc: "ë¨¼ì§€ë§Œ ìŒ“ì¸ ì°½ê³ ì—ì„œ ì¡ë™ì‚¬ë‹ˆë¥¼ ë°œê²¬í–ˆìŠµë‹ˆë‹¤." },
