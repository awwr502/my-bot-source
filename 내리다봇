function _handleShopEffect(item, user, roomName, replier, data, targetUid, finalPrice) {
Â  Â  var roomData = data.rooms[roomName];
Â  Â  if (!roomData) return;

Â  Â  // ì¤‘ì•™ì€í–‰ ì¬ì› ì´ˆê¸°í™” (ê¸°ë³¸ 10,000P)
