        var tradeCfg = SYSTEM_CONFIG.TRADE;
        var shipCfg = tradeCfg.SHIPS[user.shipLevel || 1];
        
        // í˜„ì¬ ì´ ì ì¬ëŸ‰ ê³„ì‚°
        var currentCargoCount = 0;
        for (var key in (user.cargo || {})) {
            currentCargoCount += Number(user.cargo[key] || 0);
