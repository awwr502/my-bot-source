            var horseBetSum = 0;
            for (var uid in racingData.bets) {
                if (racingData.bets[uid].horseId === h.id) horseBetSum += Number(racingData.bets[uid].amount);
            }
            return h.id + ". " + h.name + " [" + h.icon + "]\n    â”” í˜„ ë°°íŒ…ì•¡: " + fp(horseBetSum) + "P";
        }).join("\n");

