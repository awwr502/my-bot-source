                if (reason.indexOf("ê´‘ì‚°") !== -1) pools.mine += Math.floor(amt * rates.MINE);
                else if (reason.indexOf("ë‚šì‹œ") !== -1) pools.fish += Math.floor(amt * rates.FISH);
                else if (reason.indexOf("ë¯¸ì ì¤‘") !== -1) pools.casino += Math.floor(amt * rates.CASINO);
                else if (reason.indexOf("ì´ì") !== -1) pools.bank += Math.floor(amt * rates.BANK);
                else if (reason.indexOf("ìƒì ") !== -1) pools.shop += Math.floor(amt * rates.SHOP);
                else if (reason.indexOf("ë°°íŒ…") !== -1) pools.race += Math.floor(amt * rates.RACING);
            });
        }
    } catch(e) { Log.error("Dividend Scan Error: " + e); }

    // 2. [ê´‘ì‚° ê°€ì§‘ê³„ ì—°ë™] í˜„ì¬ ì±„êµ´ ì¤‘ì¸ ìœ ì €ì˜ ë¯¸ì •ì‚° ìˆ˜ìµ ì‹¤ì‹œê°„ í•©ì‚°
    var pendingMineEarn = 0;
    var pol = util_getActivePolicy(roomData);
    var mineMult = util_getEcoMultiplier(roomName) * (pol.mineMult || 1.0);
    var mCfg = SYSTEM_CONFIG.ECO.MINE;

    // ê´‘ë¬¼ ê¸°ëŒ€ê°’ ë°˜ì˜ (í‰ê·  ìˆ˜ìµ ë°°ìœ¨)
    var expMult = 1 + (mCfg.COPPER_PROB * (mCfg.COPPER_MULT-1)) + (mCfg.GOLD_PROB * (mCfg.GOLD_MULT-1)) + (mCfg.DIA_PROB * (mCfg.DIA_MULT-1));

