        } else if (resSummary.newIcons.length > 0) {
            body += "\nê²°ê³¼: " + resSummary.newIcons[0];
        }

        replier.reply(formatCommand(mData.title, user, body + "\n\n\"" + mData.desc + "\"", "ë‚´ ì”ì•¡: " + fp(user.point) + "P"));
        checkCollectionMaster();
    } 
    
