    if (msg === "/ë¿Œë¦¬ê¸°") {
        var roomData = data.rooms[roomName];
        var sprinkleData = roomData.features.sprinkleData; // ë°©ë³„ ë°ì´í„° ì—°ê²°

        if (sprinkleData.active) { 
            replier.reply(formatAdmin("ì˜¤ë¥˜", "ì´ë¯¸ ë¿Œë¦¬ê¸°ê°€ ì§„í–‰ ì¤‘ì…ë‹ˆë‹¤.")); 
            return true; 
