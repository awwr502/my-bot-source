        data.economyDamping = val;
        safeSaveData(data);
        replier.reply(formatAdmin("ğŸ›¡ï¸ ë¬¼ê°€ ì™„ì¶© ì„¤ì • ì™„ë£Œ", "ì ìš© ë¹„ìœ¨: " + (val*100) + "%"));
